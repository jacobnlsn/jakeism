<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="BusinessLayer"
                   namespace="BusinessLayer.Domain">

  <class name="Comment" table="JAKEISM_COMMENT">
    <id name="Id" column="COMMENT_ID" type="Guid">
      <generator class="guid" />
    </id>
    <many-to-one name="Entry" class="Entry" column="ENTRY_ID" cascade="none" />
    <property name="CommentBody" />
    <many-to-one name="Usr" class="User" column="USER_ID" cascade="none" />
    <property name="Date" type="DateTime" />
  </class>

</hibernate-mapping>